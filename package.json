{
  "name": "minimalist_react",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "scripts": {
    "test": "$(npm bin)/jest",
    "build": "npm test && $(npm bin)/parcel build ./src/index.html --no-source-maps",
    "start": "$(npm bin)/tsc --noEmit --watch & $(npm bin)/parcel ./src/index.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.2",
    "babel-jest": "^26.0.1",
    "jest": "^26.0.1",
    "parcel-bundler": "^1.12.4",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.8",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  }
}
