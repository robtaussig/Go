{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "lib": ["dom"],
    "jsx": "react",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}